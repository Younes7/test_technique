<div class=" card card-body mt-3">
  <form action="/posts/{{post.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <label for="title">Titre</label>
      <input type="text" class="form-control" name="title" value="{{post.title}}" required>
    </div>
    <div class="form-group">
      <label for="content">Information</label>
      <textarea class="form-control" name="content" required>{{post.content}}</textarea>
    </div>
    <button type="submit" class="btn btn-dark">Editer</button>
  </form>
</div>